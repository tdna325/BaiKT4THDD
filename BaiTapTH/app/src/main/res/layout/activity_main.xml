<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/thanh_gio_hang"
        tools:context=".MainActivity">


        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbarLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <ImageView
                    android:id="@+id/imageView"
                    android:src="@drawable/bgmain"
                    android:background="@drawable/merrychoconong"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    app:layout_collapseMode="parallax"
                    android:layout_height="match_parent"/>
                <View
                    android:background="@drawable/scrim_topdown"
                    android:layout_gravity="top"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"/>
                <View
                    android:background="@drawable/scrim"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"/>
                <androidx.appcompat.widget.Toolbar
                    app:title="Thức Uống"
                    android:id="@+id/toolbar"
                    app:layout_collapseMode="pin"
                    android:theme="@style/ThemeOverlay.AppCompat.Light"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"/>

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:background="#fff"
            android:id="@+id/recyclerView"
            android:paddingTop="16dp"
            android:layout_width="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_height="match_parent"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_margin="16dp"
            app:fabSize="normal"
            android:backgroundTint="#C80000"
            app:backgroundTint="#00000000"
            android:id="@+id/floatingActionButton"
            app:layout_anchorGravity="bottom|end|right"
            app:layout_anchor="@+id/appBarLayout"
            android:src="@drawable/ic_add"
            android:layout_height="wrap_content"/>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <Button
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/drop_menu"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_menu"
        android:layout_width="32dp"
        android:layout_height="32dp"/>
    <ImageView
        android:id="@+id/view_animation"
        android:visibility="invisible"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <View
        android:id="@+id/view_end_animation"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:background="#000"
        android:layout_width="10dp"
        android:layout_height="10dp"/>
    <RelativeLayout
        android:background="#AE011B"
        android:id="@+id/thanh_gio_hang"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/soluong"
            android:textSize="24dp"
            android:padding="10dp"
            android:text="10"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/thanhtien"
            android:layout_alignParentRight="true"
            android:textSize="24dp"
            android:padding="10dp"
            android:text="36.000đ"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>
